{
  "compilerOptions": {
    "moduleDetection": "force",
    "isolatedModules": true,
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "target": "ES2020",
    "importHelpers": false,
    "declaration": true,
    "sourceMap": true,
    "rootDir": ".",
    "moduleResolution": "Bundler",
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": false,
    "outDir": "dist"
  },
  "include": ["src", "next-env.d.ts"],
  "exclude": ["node_modules/", "**/*.test.ts"]
}
